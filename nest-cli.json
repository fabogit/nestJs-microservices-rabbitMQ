{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "tsConfigPath": "apps/orders/tsconfig.app.json",
    "webpack": true
  },
  "monorepo": true,
  "projects": {
    "auth": {
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      },
      "entryFile": "main",
      "root": "apps/auth",
      "sourceRoot": "apps/auth/src",
      "type": "application"
    },
    "billing": {
      "compilerOptions": {
        "tsConfigPath": "apps/billing/tsconfig.app.json"
      },
      "entryFile": "main",
      "root": "apps/billing",
      "sourceRoot": "apps/billing/src",
      "type": "application"
    },
    "orders": {
      "compilerOptions": {
        "tsConfigPath": "apps/orders/tsconfig.app.json"
      },
      "entryFile": "main",
      "root": "apps/orders",
      "sourceRoot": "apps/orders/src",
      "type": "application"
    }
  },
  "root": "apps/orders",
  "sourceRoot": "apps/orders/src"
}